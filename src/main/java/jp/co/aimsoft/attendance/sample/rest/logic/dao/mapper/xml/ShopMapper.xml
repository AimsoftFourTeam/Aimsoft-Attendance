<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.aimsoft.attendance.sample.rest.logic.dao.mapper.xml.ShopMapper">

    <insert id="register" parameterType="jp.co.aimsoft.attendance.sample.rest.logic.dao.domain.ShopDto">
        INSERT INTO shop (
          SHOP_ID,
          SHOP_NAME
        )
        VALUES (
          #{shopId},
          #{shopName}
        )
    </insert>
    
    <select id="getShop" parameterType="String">
        SELECT * 
        FROM shop
        WHERE 
          SHOP_ID = #{shopId}
    </select>
    
    <update id="update" parameterType="jp.co.aimsoft.attendance.sample.rest.logic.dao.domain.ShopDto">
        UPDATE shop 
        SET SHOP_NAME = #{shopName}
        WHERE 
          SHOP_ID = #{shopId}    
    </update>
    
    <delete id="delete" parameterType="String">
    	DELETE FROM shop
    	WHERE
    	  SHOP_ID = #{shopId}
    </delete>
</mapper>