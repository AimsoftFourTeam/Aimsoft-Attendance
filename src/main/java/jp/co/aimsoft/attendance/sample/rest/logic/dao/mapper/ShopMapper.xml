<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.co.aimsoft.attendance.sample.rest.logic.dao.mapper.ShopMapper">

    <insert id="register" parameterType="jp.co.aimsoft.attendance.sample.rest.logic.dao.domain.ShopDto">
        INSERT INTO shop (
          shop_id,
          shop_name
        )
        VALUES (
          #{shopId},
          #{shopName}
        )
    </insert>
    
    <select id="getShop" parameterType="String" resultType="jp.co.aimsoft.attendance.sample.rest.logic.dao.domain.ShopDto">
        SELECT * 
        FROM shop
        WHERE 
          shop_id = #{shopId}
    </select>
    
    <update id="update" parameterType="jp.co.aimsoft.attendance.sample.rest.logic.dao.domain.ShopDto">
        UPDATE shop 
        SET shop_name = #{shopName}
        WHERE 
          shop_id = #{shopId}    
    </update>
    
    <delete id="delete" parameterType="String">
    	DELETE FROM shop
    	WHERE
    	  shop_id = #{shopId}
    </delete>
</mapper>